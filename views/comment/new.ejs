<% include ../partials/header %>

<div class="container main">
    <div class="title">
        <h1>Add a new Comment to <%= campground.name %></h1>
    </div>
    <form action="/campground/<%= campground._id %>/comment" method="POST">
        
      <div class="form-group row">
        <!--<label for="inputComment3" class="col-sm-2 col-form-label">Comment</label>-->
        <div class="col-sm-10">
          <input type="text" class="form-control" id="inputComment3" placeholder="comment" name="comment[text]">
        </div>
      </div>

      <div class="form-group row">
          <!--<label for="inputComment3" class="col-sm-2 col-form-label"></label>-->
        <div class="col-sm-10">
          <button type="submit" class="btn btn-outline-primary">Submit</button>
          <a id="btn-inline" class="btn btn-outline-success" href="/campground/<%= campground._id %>">Go back</a>
        </div>
      </div>
    </form>
</div>

<% include ../partials/footer %>
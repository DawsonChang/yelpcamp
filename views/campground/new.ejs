<% include ../partials/header %>

<div class="container main">
    <div class="title">
        <h1>Add a new Campground</h1>
    </div>
    <form action="/campground" method="POST">
      <div class="form-group row">
        <!--<label for="inputName3" class="col-sm-2 col-form-label">Name</label>-->
        <div class="col-sm-10">
          <input type="text" class="form-control" id="Nsername3" placeholder="Name" name="name">
        </div>
      </div>
      <div class="form-group row">
        <!--<label for="inputName3" class="col-sm-2 col-form-label">Name</label>-->
        <div class="col-sm-10">
          <input type="number" class="form-control" id="NserPrice3" placeholder="Price" name="price" min="0.01" step="0.01">
        </div>
      </div>
      <div class="form-group row">
        <!--<label for="inputImage3" class="col-sm-2 col-form-label">Image</label>-->
        <div class="col-sm-10">
          <input type="text" class="form-control" id="NserImage3" placeholder="Image" name="image">
        </div>
      </div>
      <div class="form-group row">
        <!--<label for="exampleFormControlTextarea1">Description</label>-->
        <div class="col-sm-10">
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description">Something you want to describe...</textarea>
        </div>
      </div>
      
      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-outline-primary">Submit</button>
          <a id="btn-inline" class="btn btn-outline-success" href="/campground">Go back</a>
        </div>
      </div>
    </form>


<% include ../partials/footer %>
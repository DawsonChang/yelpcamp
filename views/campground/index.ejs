<% include ../partials/header %>

<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1>Welcome to Yelpcamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campground/new" role="button">Add a new Campground</a>
            </p>
        </div>
    </div>
    <div class="row">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img src="<%= campground.url %>" class="card-img-top">
                    <div class="card-body">
                        <h4><%= campground.name %></h4>
                    </div>
                    <P>
                        <a href="/campground/<%= campground._id %>" class="btn btn-primary btn-sm">More Info</a>
                    </P>
                </div>
            </div>
        <% }); %>
    </div>
    
</div>

<% include ../partials/footer %>